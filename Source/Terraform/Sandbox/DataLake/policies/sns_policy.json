{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowAccountSubscribe",
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": [
        "SNS:Subscribe",
        "SNS:Receive"
      ],
      "Resource": "arn:aws:sns:${region}:${account_id}:${topic_name}",
      "Condition": {
        "StringEquals": {
          "AWS:SourceAccount": "${account_id}"
        }
      }
    },
    {
      "Sid": "AllowBucketPublish",
      "Effect": "Allow",
      "Principal": {
        "Service": "s3.amazonaws.com"
      },
      "Action": [
        "SNS:Publish"
      ],
      "Resource": "arn:aws:sns:${region}:${account_id}:${topic_name}",
      "Condition": {
        "ArnLike": {
          "aws:SourceArn": "arn:aws:s3:::${s3_bucket_name}"
        }
      }
    }
  ]
}
