# Repository Settings
DATALABS_PYTHONPATH='{{pythonpath}}'


# Project Settings
PROJECT_NAME='OneView'


TASK_CLASS=datalabs.etl.task.ETLTask
TASK_WRAPPER_CLASS=datalabs.etl.awslambda.ETLTaskWrapper


# Extractor
EXTRACTOR__TASK_CLASS=datalabs.etl.jdbc.extract.JDBCExtractorTask
EXTRACTOR__DRIVER=com.ibm.db2.jcc.DB2Jcc
EXTRACTOR__DRIVER_TYPE=db2
EXTRACTOR__JAR_PATH=./db2jcc4.jar
EXTRACTOR__DATABASE_HOST=rdbp1190.ama-assn.org
EXTRACTOR__DATABASE_PORT=54000
EXTRACTOR__DATABASE_NAME=prddw
EXTRACTOR__DATABASE_USERNAME=dlabs
EXTRACTOR__DATABASE_PASSWORD={{datalabs_password}}
EXTRACTOR__SQL="SELECT party.PARTY_ID as PARTY_ID, addr.EMAIL_STATUS as status FROM AMAEDW.EMAIL_ADDR addr INNER JOIN AMAEDW.PARTY_EMAIL party ON party.EMAIL_ID=addr.EMAIL_ID ORDER BY PARTY_ID LIMIT {index}, {count}"
EXTRACTOR__CHUNK_SIZE=100000
EXTRACTOR__COUNT=300000
EXTRACTOR__START_INDEX=1
EXTRACTOR__MAX_PARTS=3
EXTRACTOR_PART_INDEX=1

# PPD Transformer
TRANSFORMER__TASK_CLASS=datalabs.etl.transform.PassThroughTransformerTask

# Loader
LOADER__TASK_CLASS=datalabs.etl.fs.load.LocalFileLoaderTask
LOADER__BASE_PATH=./
LOADER__FILES=email_status.csv
