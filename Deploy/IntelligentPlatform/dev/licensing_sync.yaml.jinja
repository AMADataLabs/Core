    ##########################################################################
    # Task Variables - ({"DAG": {"S": "LICENSING"}, "Task": {"S": "<Task ID>"}})
    ##########################################################################

    # Active Contracts Extractor
    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__BACKEND: ${VISTEX_DB_BACKEND}
    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__DATABASE_HOST: ${VISTEX_DB_HOST}
    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__DATABASE_PORT: ${VISTEX_DB_PORT}
    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__DATABASE_PARAMETERS: ${VISTEX_DB_PARAMETERS}
    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__DATABASE_USERNAME: ${VISTEX_DB_USERNAME}
    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__DATABASE_PASSWORD: ${VISTEX_DB_PASSWORD}
    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__SQL: "
    SELECT
        T1.id ,
        T2.licensee_company_key,
        T1.licensor,
        T1.licensee ,
        LEN(T1.licensee),
        T1.account_exec,
    CASE
        WHEN T1.description like '%Dist%'
        THEN 'CPT Distribution License Agreement'
        WHEN T1.description like '%Internal%'
        THEN 'Internal Use License Agreement'
        WHEN T1.description in ( '<50001 CL Health Plans', 'Pilot Test Agreement of CPT in a Coordinated Care Organization', 'Standalone Settlement Agreement')
        THEN 'Internal Use License Agreement'
        ELSE T1.description
    END AS Contract_TYPE,
	T1.contract_status ,
	T1.status_last_updated_date ,
    CONVERT(DATE, MILESTONE.milestone_date)  AS [EFFECTIVE DATE],
	CONVERT(DATE, T1.start_date)        AS Start_Date ,
    CONVERT(DATE, T1.expiration_date)   AS Expiration_DATE,
    CONVERT(DATE, T1.sell_off_end_date) AS SELL_OFF_DATE,
#   CASE WHEN t2.renewal_notes IS NOT NULL THEN (
#			LEFT(t2.renewal_notes,
#			charindex(' ',t2.renewal_notes,1)-1)) ELSE 0 END     AS Renewal_# ,
	T1.properties ,
	T1.articles ,
	T1.territories ,
	T1.channels ,
	T3.STREET,
	T3.CITY,
	T3.state,
	T3.POSTCODE AS ZIP,
    WEB.text_value  AS [WEBSITE],
    Version.text_value  AS  [CLICKTHROUGH_AGREEMENT_VERSION_NO],
    Zendesk.text_value  AS  [ZENDESK_TICKET_ID]

    FROM
        v_cm_contracts T1
            JOIN cm_contract T2
            ON T1.contract_key=t2.contract_key
                JOIN V_MP_COMPANIES T3
                ON t1.licensee_company_key = T3.COMPANY_ID
                        LEFT JOIN (Select * from cm_contract_milestone where description like 'Effective Date') MILESTONE on t1.contract_key = MILESTONE.contract_key
                        LEFT JOIN (Select key_value, text_value from v_ts_custom_fields_details where customfield_id = 75) WEB ON T1.contract_key = WEB.key_value
                        LEFT JOIN (Select key_value, text_value from v_ts_custom_fields_details where customfield_id = 76) Version ON T1.contract_key = Version.key_value
                        LEFT JOIN (Select key_value, text_value from v_ts_custom_fields_details where customfield_id = 77) Zendesk ON T1.contract_key = Zendesk.key_value

    WHERE
        T1.description NOT Like '%AFFINITY%' and
 #	    T1.description like '%internal%' and
        T1.licensee <> '%ACME%' and
        T1.account_exec Not In ('David Young', 'Brian Eaggleston') and
        T1.properties like '%CPT%'

    Order by T1.licensee asc
    OFFSET {index} ROWS
    FETCH NEXT {count} ROWS ONLY;
    "
    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__CHUNK_SIZE: '100000'

    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__CACHE_OUTPUT_CLASS: ${S3_CACHE_CLASS}
    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__CACHE_OUTPUT_BUCKET: ${S3_INGESTED_DATA_BUCKET}
    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__CACHE_OUTPUT_BASE_PATH: ${S3_BASE_PATH}
    LICENSING_SYNC__EXTRACT_ACTIVE_CONTRACTS__CACHE_OUTPUT_FILES: active_contracts.csv


    # CONTRACT RIGHTS Extractor
    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__BACKEND: ${VISTEX_DB_BACKEND}
    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__DATABASE_HOST: ${VISTEX_DB_HOST}
    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__DATABASE_PORT: ${VISTEX_DB_PORT}
    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__DATABASE_PARAMETERS: ${VISTEX_DB_PARAMETERS}
    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__DATABASE_USERNAME: ${VISTEX_DB_USERNAME}
    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__DATABASE_PASSWORD: ${VISTEX_DB_PASSWORD}
    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__SQL: "
    SELECT DISTINCT
        T3.ID                       AS  CONTRACTID,
        T3.licensee                 AS  LICENSEE,
    CASE WHEN T3.description like '%Dist%'
    THEN 'CPT Distribution License Agreement'
    WHEN T3.description like '%Internal%'
    THEN 'Internal Use License Agreement'
    WHEN T3.description in ( '<50001 CL Health Plans', 'Pilot Test Agreement of CPT in a Coordinated Care Organization', 'Standalone Settlement Agreement')
    THEN 'Internal Use License Agreement'
    ELSE T3.description         END AS Contract_TYPE,
 #  T3.description              AS  CONTRACT_TYPE,
    T3.contract_status          AS  CONTRACT_STATUS,
    T3.expiration_date          AS  EXPIRATION_DATE,
    PROPERTY.description        AS  PROPERTY,
    PROPERTY.property_key       AS  PROPERTY_KEY,
    ARTICLE.description         AS  ARTICLE,
    ARTICLE.article_key         AS  ARTICLE_KEY,
    CHANNEL.Parent_description  AS PARENT_CHANNEL,
    CHANNEL.description         AS  CHANNEL,
    CHANNEL.channel_key         AS  CHANNEL_KEY
    FROM
        cm_model_incl T1
        join cm_model t2 on t1.model_key = t2.model_key
    JOIN V_CM_CONTRACTS T3 ON T2.contract_key = T3.contract_key
    JOIN (
        SELECT DISTINCT
            T1.model_key,
            T2.property_key
        from
            cm_model_incl T1
                LEFT JOIN (
                select
                    LEV.model_key as model_key,
                    LEV.property_key as PROPERTY_KEY
                from cm_model_incl LEV
                where LEV.property_key is not null
               ) T2
        ON T1.model_key = t2.model_key ) PROPS
        ON T1.model_key = PROPS.model_key

    LEFT JOIN
        v_ri_property Property
            ON Property.property_key = PROPS.property_key
    JOIN (
        SELECT DISTINCT
            T1.model_key,
            T2.ARTICLE_KEY
        from
            cm_model_incl T1
                LEFT JOIN (
                select
                    EXO.model_key as model_key,
                    EXO.article_key as ARTICLE_KEY
    from
        cm_model_incl EXO
    where
        EXO.article_key is not null
    ) T2 ON T1.model_key = t2.model_key
    ) ARTS ON T1.model_key = ARTS.model_key
    LEFT JOIN v_ri_article ARTICLE ON ARTICLE.article_key = ARTS.ARTICLE_KEY
    JOIN (
        SELECT
            DISTINCT T1.model_key,
            T2.CHANNEL_KEY
        from
            cm_model_incl T1
            LEFT JOIN (
                select
                    gen.model_key as model_key,
                    gen.channel_key as CHANNEL_KEY
                from
                    cm_model_incl gen
                where
                    channel_key is not null
            ) T2 ON T1.model_key = t2.model_key
    ) CHANS ON T1.model_key = CHANS.model_key
    LEFT JOIN v_ri_channel CHANNEL ON CHANNEL.channel_key = CHANS.CHANNEL_KEY
    WHERE
        T3.description NOT Like '%AFFINITY%'
        and T3.licensee <> '%ACME%'
        and T3.account_exec Not In ('David Young', 'Brian Eaggleston')
        AND T3.properties like '%CPT%' - -
        AND - - T3.id like '21940'
    ORDER BY
        T3.LICENSEE ASC,
        PROPERTY.description ASC,
        ARTICLE.description ASC,
        CHANNEL.description ASC

    OFFSET {index} ROWS
    FETCH NEXT {count} ROWS ONLY;
    "
    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__CHUNK_SIZE: '100000'

    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__CACHE_OUTPUT_CLASS: ${S3_CACHE_CLASS}
    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__CACHE_OUTPUT_BUCKET: ${S3_INGESTED_DATA_BUCKET}
    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__CACHE_OUTPUT_BASE_PATH: ${S3_BASE_PATH}
    LICENSING_SYNC__EXTRACT_CONTRACT_RIGHTS__CACHE_OUTPUT_FILES: contract_rights.csv


